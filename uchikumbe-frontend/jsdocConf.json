{
  "plugins": ["./customTags.js", "plugins/markdown"],
  "recurseDepth": 10,
  "opts": {
    "template": "node_modules/clean-jsdoc-theme",
    "destination": "./docs/",
    "recurse": true
  },
  "source": {
    "include": ["./src", "README.md"],
    "includePattern": ".+\\.(js|jsx)(doc|x)?$",
    "excludePattern": "node_modules"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "docdash": {
    "sort": true,
    "search": true,
    "collapse": false
  }
}
